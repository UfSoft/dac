<?xml version="1.0" encoding="utf-8"?>
<app:DacApplication xmlns:mx="http://www.adobe.com/2006/mxml"
                xmlns:components="org.ufsoft.dac.components.*"
                xmlns:app="org.ufsoft.dac.*"
                layout="vertical"
                scriptRecursionLimit="1000"
                scriptTimeLimit="60"
                usePreloader="true"
                pageTitle="Audio Convert"
                frameRate="16"
                themeColor="haloBlue">
  <mx:Style source="assets/style.css" />
  <mx:Script>
    import com.flexspy.FlexSpy;
  </mx:Script>

  <mx:ApplicationControlBar width="100%">
    <mx:Image source="{rtpLogo}"/>
    <mx:Label text="Audio Converter by Pedro Algarvio for Rádio e Televisão de Portugal"
              styleName="applicationControlBarLabel"/>
    <mx:Spacer width="100%"/>
    <mx:Button id="btnFlexSpy" label="FlexSpy" click="FlexSpy.show()"/>
    <components:ConnectionButton id="connButton"/>
  </mx:ApplicationControlBar>

  <mx:HDividedBox id="mainContent" width="100%" height="100%">
    <components:UploadsPanel width="50%" height="100%" title="Uploads Queue"/>
    <components:ConvertQueuePanel width="50%" height="100%"/>
  </mx:HDividedBox>
</app:DacApplication>
